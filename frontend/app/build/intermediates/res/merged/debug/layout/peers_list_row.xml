<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/device_img"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_smartphone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginTop="8dp"
            android:id="@+id/device_name"
            android:textSize="20dp"
            android:layout_toRightOf="@id/device_img"
            android:text="One Plus 3T"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_status_title"
            android:layout_below="@id/device_name"
            android:layout_toRightOf="@id/device_img"
            android:textColor="@color/colorPrimaryDark"
            android:text="Status - "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_status"
            android:text="Ready to Connect"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/device_status_title"
            android:layout_below="@id/device_name"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_peer_connect"
            android:text="Connect"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>